<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageProfileFragment">

    <RelativeLayout
        android:id="@+id/LinearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="188dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="110dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="111dp"
            android:scaleType="centerInside"
            android:src="@drawable/sgsafety_icon" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:ignore="MissingConstraints"
        >

        <LinearLayout
            android:id="@+id/profile1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            >


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#DCDCDC"
                android:src="@drawable/login_logo" />

            <Button
                android:id="@+id/btn_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DCDCDC"
                android:onClick="changeUsername"
                android:text="username" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/profile1"
            tools:ignore="MissingConstraints">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#DCDCDC"
                android:src="@drawable/email_logo" />

            <Button
                android:id="@+id/btn_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:background="#DCDCDC"
                android:onClick="changeEmail"
                android:text="Email"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/profile3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/profile2"
            tools:ignore="MissingConstraints">



            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#DCDCDC"
                android:src="@drawable/contact_logo" />

            <Button
                android:id="@+id/btn_contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:text="Verify Contact"
                android:textAlignment="gravity"
                android:background="#DCDCDC"
                android:onClick="verifyContact"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/profile3"
            tools:ignore="MissingConstraints">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#DCDCDC"
                android:src="@drawable/password_logo" />

            <Button
                android:id="@+id/btn_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:background="#DCDCDC"
                android:onClick="changePassword"
                android:text="Change Password"
                android:textAlignment="gravity"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/profile5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/profile4"
            tools:ignore="MissingConstraints">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#DCDCDC"
                android:src="@drawable/cpr_logo" />

            <Button
                android:id="@+id/btn_cpr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:background="#DCDCDC"
                android:onClick="updateCPR"
                android:text="Update CPR Certificate"
                android:textAlignment="gravity" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>