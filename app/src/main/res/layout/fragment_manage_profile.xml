<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.Fragment.ManageProfileFragment">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="273dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/sgsafety_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <Button
        android:id="@+id/btn_password"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/password"
        android:text="Change Password"
        android:textAlignment="gravity"
        android:textColor="#595656"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_cpr"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_email"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/email"
        android:text="Edit Email"
        android:textColor="#595656"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <Button
        android:id="@+id/btn_contact"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"


        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/phone"
        android:text="Change Contact"
        android:textAlignment="gravity"
        android:textColor="#595656"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99" />

    <Button
        android:id="@+id/btn_cpr"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/cert"
        android:text="Update CPR Certificate"
        android:textAlignment="gravity"
        android:textColor="#595656"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />


</androidx.constraintlayout.widget.ConstraintLayout>